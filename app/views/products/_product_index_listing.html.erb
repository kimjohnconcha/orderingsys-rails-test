<% if @products %>
<% @products.each do |product| %>
<div class="col-md-4 grid-stn simpleCart_shelfItem">
    <!-- normal -->
        <div class="ih-item square effect3 bottom_to_top">
            <div class="bottom-2-top">
            <!-- <div class="img"><%= image_tag("grid4.jpg", :alt => "/", :class => "img-responsive gri-wid") %></div> -->
            <div class="img"><img src="<%= product.image %>" alt="/" class="img-responsive gri-wid"></div>
            <div class="info">
                <div class="pull-left styl-hdn">
                    <h3><%= product.name %></h3>
                </div>
                <div class="pull-right styl-price">
                    <p>
                        <a  href="#" class="item_add">
                        <span class="glyphicon glyphicon-shopping-cart grid-cart" aria-hidden="true"></span> 
                        <span class=" item_price">$<%= product.price %></span>
                        </a>
                    </p>
                </div>
                <div class="clearfix"></div>
            </div></div>
        </div>
    <!-- end normal -->
    <div class="quick-view">
        <!-- <a href="#" onclick="window.location.href='products/1' ">Quick view</a> -->
        <%= link_to "Quick view", product_path(product.id), method: :get %>
    </div>
</div>
<% end %>
<% end %> 
