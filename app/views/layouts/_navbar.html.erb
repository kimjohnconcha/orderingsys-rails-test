                <div class="cart box_1">
                    <a href="/carts">
                    <h3>
                        <div class="total">
                            <span>$<%= if @carts.count > 0 then @carts.sum('quantity * products.price').round(2) else 0.00 end %></span>(<%= @carts.count %>)
                        </div>
                    </h3>
                    </a>
                    <p></p><label href="/carts">Your Cart</label></p>
