                <% if !user_signed_in?  %>
                    <%= link_to "Sign up", registration_path, :class => "btn btn-default log-bar", :role => "button" %>
                    <%= link_to "Login", signin_path, :class => "btn btn-default log-bar", :role => "button" %>
                <% else  %>
                <div>
                Welcome <%= current_user.first_name  %> !
                </div> 
                <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => "btn btn-default log-bar", :role => "button" %>
                <% end %>

